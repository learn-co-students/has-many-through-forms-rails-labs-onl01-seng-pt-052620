<%= form_for @post do |f| %>
    <%= f.label "Title" %>
    <%= f.text_field :title %><br>

    <%= f.label "Content" %>
    <%= f.text_area :content %>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {include_blank: true} %>
    <%= f.fields_for :categories, post.categories.build do |category| %>
      <%= category.text_field :name %>
    <% end %>

    <%= f.fields_for :comments, post.comments.build do |comment| %>
      <%= comment.text_field :content %>
    <% end %>

    <%= f.submit %>
  <% end %>

