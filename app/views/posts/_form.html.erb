<%= form_for post do |f| %>
  <p><%= f.label "Title:" %><br />
  <%= f.text_field :title %></p>
  
  <p><%= f.label "Content:" %><br />
  <%= f.text_area :content %></p>

  <p><%= f.label "Categories:" %>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name)%><br /></p>
    <p>
      <%= f.fields_for :categories, Category.new do |cf| %>
      <%= cf.label :name, 'or add a new category:' %><br />
      <%= cf.text_field :name %>
      <% end %>
    </p>

  <%= f.submit %>
<% end %>
